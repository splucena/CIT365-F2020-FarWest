@page
@model SacramentPlanner.Pages.Speakers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2 class="pt-4 pb-4">Speakers</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Speaker</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Speaker[0].PlannerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speaker[0].SpeakerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speaker[0].SpeakerTopic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Speaker) {
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Speaker[0].PlannerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeakerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeakerTopic)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SpeakerId" class="btn btn-primary">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.SpeakerId" class="btn btn-primary">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.SpeakerId" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
