@page
@model SacramentPlanner.Pages.Songs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2 class="pt-4 pb-4">Songs</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Song</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].OpenSongNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].OpenSongTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].SacramentSongNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].SacramentSongTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].InterSongNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].InterSongTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].CloseSongNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].CloseSongTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Song) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OpenSongNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenSongTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentSongNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentSongTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterSongNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterSongTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CloseSongNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CloseSongTitle)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SongId" class="btn btn-primary">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.SongId" class="btn btn-primary">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.SongId" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
