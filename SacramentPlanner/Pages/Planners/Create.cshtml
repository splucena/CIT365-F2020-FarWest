@page
@model SacramentPlanner.Pages.Planners.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2 class="pt-4 pb-4">Create Plan</h2>

<h4>Plan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Planner.MeetingDate" class="control-label"></label>
                <input asp-for="Planner.MeetingDate" class="form-control" />
                <span asp-validation-for="Planner.MeetingDate" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Planner.BishopricId" class="control-label">Conducting:</label>
                <select asp-for="Planner.BishopricId" class="form-control">
                    <option selected disabled hidden>Select One</option>
                    @foreach (var bMember in @Model.Bishopric)
                    {
                        <option value="@bMember.BishopricId">@bMember.BishopricName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Planner.OpenPrayer" class="control-label"></label>
                <input asp-for="Planner.OpenPrayer" class="form-control" />
                <span asp-validation-for="Planner.OpenPrayer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planner.ClosePrayer" class="control-label"></label>
                <input asp-for="Planner.ClosePrayer" class="form-control" />
                <span asp-validation-for="Planner.ClosePrayer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-page-handler="AddSpeakers" value="Add Speakers" class="btn btn-success" />
            </div>
            <div class="form-group">
                <input type="submit" asp-page-handler="AddSongs" value="Add Songs" class="btn btn-success"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
