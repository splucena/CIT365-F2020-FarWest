@page
@model SacramentPlanner.Pages.Planners.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h2 class="pt-4 pb-4">Plans</h2>

<p>
	<a asp-page="Create" class="btn btn-primary">Create New Plan</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Planner[0].MeetingDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Planner[0].BishopricId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Planner[0].OpenPrayer)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Planner[0].ClosePrayer)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Planner)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.MeetingDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Bishopric.BishopricName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OpenPrayer)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ClosePrayer)
				</td>
                <td>
                    <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.PlannerId">Edit</a>
                    <a asp-page="./Details" class="btn btn-primary" asp-route-id="@item.PlannerId">Details</a>
                    <a asp-page="./Delete" class="btn btn-primary" asp-route-id="@item.PlannerId">Delete</a>

                </td>
			</tr>
		}
	</tbody>
</table>
