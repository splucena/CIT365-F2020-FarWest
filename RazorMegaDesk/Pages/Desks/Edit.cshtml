@page
@model RazorMegaDesk.Pages.Desks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Desk</h4>
<hr />
<div class="row">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md">
                    <label asp-for="Desk.CustomerName" class="control-label"></label>
                    <input asp-for="Desk.CustomerName" class="form-control" placeholder="Es. Giacomo Draghi" />
                    <span asp-validation-for="Desk.CustomerName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md">
                    <label asp-for="Desk.Width" class="control-label"></label>
                    <input asp-for="Desk.Width" class="form-control" placeholder="24 to 96 Inches" />
                    <span asp-validation-for="Desk.Width" class="text-danger"></span>
                </div>
                <div class="form-group col-md">
                    <label asp-for="Desk.Height" class="control-label"></label>
                    <input asp-for="Desk.Height" class="form-control" placeholder="12 to 48 Inches" />
                    <span asp-validation-for="Desk.Height" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md">
                    <label asp-for="Desk.SurfaceMaterialID" class="control-label"></label>
                    <select asp-for="Desk.SurfaceMaterialID" class="form-control" asp-items="ViewBag.SurfaceMaterialID"></select>
                </div>
                <div class="form-group col-md">
                    <label asp-for="Desk.NumberOfDrawer" class="control-label"></label>
                    <input asp-for="Desk.NumberOfDrawer" class="form-control" placeholder="0 to 7" />
                    <span asp-validation-for="Desk.NumberOfDrawer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md">
                    <label asp-for="Desk.ProductionTimeID" class="control-label"></label>
                    <select asp-for="Desk.ProductionTimeID" class="form-control" asp-items="ViewBag.ProductionTimeID"></select>
                </div>
                <div class="form-group col-md">
                    <label asp-for="Desk.DateCreated" class="control-label"></label>
                    <input asp-for="Desk.DateCreated" class="form-control" />
                    <span asp-validation-for="Desk.DateCreated" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-row">
                <div class="form-group col-md">
                    <label asp-for="Desk.Amount" class="control-label"></label>
                    <input asp-for="Desk.Amount" class="form-control" />
                    <span asp-validation-for="Desk.Amount" class="text-danger"></span>
                </div>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-darkbrown" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-darkbrown" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
