@page
@model RazorMegaDesk.Pages.ProductionTimes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Production Time</h1>

<p>
    <a class="btn btn-red" asp-page="Create"><i class="fas fa-plus"></i>&nbspCreate New Production Time</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductionTime[0].Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionTime[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductionTime) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class="btn btn-darkbrown" asp-page="./Edit" asp-route-id="@item.ProductionTimeID"><i class="fas fa-pen"></i>&nbspEdit</a>
                <a class="btn btn-darkbrown" asp-page="./Details" asp-route-id="@item.ProductionTimeID"><i class="fas fa-eye"></i>&nbspDetails</a>
                <a class="btn btn-darkbrown" asp-page="./Delete" asp-route-id="@item.ProductionTimeID"><i class="fas fa-times-circle"></i>&nbspDelete</a>
            </td>
        </tr>
}
    </tbody>
</table>
